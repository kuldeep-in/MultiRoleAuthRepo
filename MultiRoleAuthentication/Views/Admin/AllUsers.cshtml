@model IEnumerable<MultiRoleAuthentication.Areas.Identity.Data.MultiRoleAuthUser>
@{
    ViewData["Title"] = "AdminUsers";
}

<h1>All Users</h1>

<table class="table table-striped" style="padding-top:8px;">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.LockoutEnd.ToString()))
                    {
                        @Html.ActionLink("Unlock", "ApproveUser", new { id = item.Id, btnAction = 1 }, new { @class = "btn btn-primary" })
                    }
                </td>
                <td>
                    @Html.ActionLink("Delete", "ApproveUser", new { id = item.Id, btnAction = 0 }, new { @class = "btn btn-danger", @onclick = "return confirm('Are you sure you want to delete?')" })
                </td>
            </tr>

        }
    </tbody>
</table>
